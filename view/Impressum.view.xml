<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	controllerName="gruene.ueberherrn.controller.Impressum">
	<ScrollContainer id="scrollContainer" vertical="true" horizontal="false" height="100%" class="sapUiContentPadding">
		<!-- <Image src="./img/logo_gruene_impressum.png" width="100%" /> -->
		<VBox>
			<Title text="{i18n>impressumTitle}" level="H2" titleStyle="H2" wrapping="true" />
			<core:HTML content="{impressum>/impressumText}" />

			<Title text="{i18n>googleAnalyticsTitle}" level="H2" titleStyle="H2" wrapping="true" />
			<Text text="{impressum>/googleAnalyticsText}" class="sapUiSmallMarginBottom" />

			<Title text="{i18n>googleAnalyticsOptOutTitle}" level="H2" titleStyle="H2" wrapping="true" />
			<core:HTML content="{impressum>/googleAnalyticsOptOutText}" />

			<Title text="{i18n>licensesTitle}" level="H2" titleStyle="H2" wrapping="true" />
			<Text id="textLicense" text="{impressum>/licenseText}" />
		</VBox>
	</ScrollContainer>
</mvc:View>