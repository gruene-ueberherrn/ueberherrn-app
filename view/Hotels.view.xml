<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="gruene.ueberherrn.controller.Hotels">
	<ScrollContainer vertical="true" horizontal="false" height="100%">
		<List items="{ path: 'hotels>/', 
					   sorter: { path: 'hotels>index' } }">
			<headerToolbar>
				<Toolbar design="Solid">
					<Title class="sapUiSmallMarginBegin" text="{i18n>hotelsTitle}" level="H2" />
				</Toolbar>
			</headerToolbar>
			<StandardListItem title="{hotels>name}" description="{hotels>description}" icon="{hotels>imageUrl}" />
		</List>
	</ScrollContainer>
</mvc:View>